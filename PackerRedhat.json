	{
		"variables": {
			"aws_source_ami": "ami-0d2692b6acea72ee6",
			"aws_vpc_id": "vpc-08c83cb91360c7490",
			"aws_subnet_id": "subnet-0844ab456719c93bd",
			"ec2_instance_type": "t2.micro",
			"output_ami_name": "Golden-EC2-AMI"
		},
		"builders": [{
			"type": "amazon-ebs",
			"source_ami": "{{user `aws_source_ami`}}",
			"ami_virtualization_type": "hvm",
			"region": "ap-south-1",
			"iam_instance_profile": "ssm",
			"vpc_id": "{{user `aws_vpc_id`}}",
			"subnet_id": "{{user `aws_subnet_id`}}",
			"instance_type": "{{user `ec2_instance_type`}}",
			"ssh_username": "ec2-user",
			"shutdown_behavior": "stop",
			"communicator": "ssh",
			"ssh_pty": true,
			"force_deregister": true,
			"force_delete_snapshot": true,
			"encrypt_boot": true,
			"ami_name": "{{user `output_ami_name`}}",
			"tags": {
				"Name": "RHEL-Goldem-AMI",
				"BuiltBy": "Packer",
				"PackagesIncluded": "SSM|Python"
			}
		}],
		"description": "AWS image",
		"provisioners": [
			{
				"type": "shell",
				"inline": [
					"sudo yum update -y"
				]
			},
			{
				"type": "shell",
				"execute_command": "echo 'packer' | sudo -S env {{ .Vars }} {{ .Path }}",
				"scripts": [
					"scripts/InstallPython.sh"
				]
			},
			{
				"type": "shell",
				"execute_command": "echo 'packer' | sudo -S env {{ .Vars }} {{ .Path }}",
				"scripts": [
					"scripts/InstallSSMAgent.sh"
				]
			},
			{
				"type": "shell",
				"execute_command": "echo 'packer' | sudo -S env {{ .Vars }} {{ .Path }}",
				"scripts": [
					"scripts/InstallAWSCLI.sh"
				]
			}
		]
	}